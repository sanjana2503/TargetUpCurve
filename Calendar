import java.util.Scanner;

public class CalendarPrinter {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter the month (1-12): ");
        int month = scanner.nextInt();

        System.out.print("Enter the year: ");
        int year = scanner.nextInt();

        printCalendar(month, year);

        scanner.close();
    }

    public static void printCalendar(int month, int year) {
        if (isValidMonth(month) && isValidYear(year)) {
            printHeader();
            printMonth(month, year);
        } else {
            System.out.println("Invalid month or year provided.");
        }
    }

    private static boolean isValidMonth(int month) {
        return month >= 1 && month <= 12;
    }

    private static boolean isValidYear(int year) {
        return year > 0;
    }

    private static void printHeader() {
        System.out.println("Su Mo Tu We Th Fr Sa");
    }

    private static void printMonth(int month, int year) {
        int startDay = getStartDay(month, year);
        int numDays = getNumDaysInMonth(month, year);

        int dayOfWeek = 0;
        for (int i = 0; i < startDay; i++) {
            System.out.print("   "); // print empty spaces for days before the first day of the month
            dayOfWeek++;
        }

        for (int day = 1; day <= numDays; day++) {
            System.out.printf("%2d ", day);
            dayOfWeek++;
            if (dayOfWeek == 7) {
                System.out.println(); // start a new line for the next week
                dayOfWeek = 0; // reset day of week counter
            }
        }
        System.out.println(); // print a newline at the end
    }

    private static int getStartDay(int month, int year) {
        int startDay = getDayOfWeek(month, 1, year);
        return (startDay + 6) % 7; // adjusting for Sunday being day 0
    }

    private static int getDayOfWeek(int month, int day, int year) {
        if (month < 3) {
            month += 12;
            year -= 1;
        }
        int k = year % 100;
        int j = year / 100;
        int dayOfWeek = (day + (26 * (month + 1)) / 10 + k + k / 4 + j / 4 + 5 * j) % 7;
        return dayOfWeek;
    }

    private static int getNumDaysInMonth(int month, int year) {
        if (month == 2) {
            return isLeapYear(year) ? 29 : 28;
        } else if (month == 4 || month == 6 || month == 9 || month == 11) {
            return 30;
        } else {
            return 31;
        }
    }

    private static boolean isLeapYear(int year) {
        return (year % 4 == 0 && year % 100 != 0) || (year % 400 == 0);
    }
}
